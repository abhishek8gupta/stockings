<br>
<% flash.each do |name, msg| %>
    <div class="alert <%= bootstrap_class_for(name) %> alert-dismissible fade show m-1" role="alert">
        <%= content_tag(:span, msg) %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
            </button>
    </div>
<% end %>
